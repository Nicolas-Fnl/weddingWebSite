# Activer le moteur de réécriture d'URL
RewriteEngine On

# Forcer HTTPS (recommandé pour Web Crypto API)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Page par défaut : index.html accessible à /
DirectoryIndex index.html

# Supprimer le .html des URLs
# Si le fichier existe avec .html, rediriger sans .html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Rediriger les URLs avec .html vers les URLs sans .html (SEO)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Ne pas réécrire les fichiers existants (CSS, JS, images, etc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]
